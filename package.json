{
	"name": "vexa",
	"version": "1.0.0",
	"private": true,
	"scripts": {
		"dev": "ts-node-dev -r tsconfig-paths/register --no-deps --respawn --transpile-only src/server.ts",
		"build": "run-p type-check lint:check \"build-only {@}\" --",
		"build-only": "rimraf dist && tsc",
		"vercel-build": "prisma generate && prisma db push --accept-data-loss && npm run build-only",
		"start": "node dist/server.js",
		"start:prod": "NODE_ENV=production node dist/server.js",
		"postinstall": "prisma generate",
		"db:generate": "prisma generate",
		"db:migrate": "prisma migrate dev",
		"db:migrate:prod": "prisma migrate deploy",
		"db:studio": "prisma studio",
		"db:push": "prisma generate && prisma db push",
		"db:pull": "prisma db pull",
		"db:seed": "tsx prisma/seed.ts",
		"type-check": "tsc --noEmit",
		"lint": "eslint . --fix --cache",
		"lint:check": "eslint . --max-warnings 0",
		"format": "prettier --write src/",
		"prepare": "husky"
	},
	"lint-staged": {
		"*.{js,ts}": [
			"eslint --fix --max-warnings 0 --no-warn-ignored",
			"prettier --write"
		],
		"*.{json,md}": [
			"prettier --write"
		]
	},
	"prisma": {
		"seed": "tsx prisma/seed.ts"
	},
	"engines": {
		"node": ">=18.0.0",
		"pnpm": ">=8.0.0"
	},
	"dependencies": {
		"@prisma/adapter-pg": "^7.0.0",
		"@prisma/client": "^7.0.0",
		"bcryptjs": "^3.0.3",
		"cookie-parser": "~1.4.4",
		"cors": "^2.8.5",
		"countries-list": "^3.2.0",
		"country-state-city": "^3.2.1",
		"debug": "~2.6.9",
		"dotenv": "^17.2.3",
		"express": "~4.21.2",
		"express-async-errors": "^3.1.1",
		"express-rate-limit": "^8.2.1",
		"express-serve-static-core": "^0.1.1",
		"helmet": "^8.1.0",
		"i18n-iso-countries": "^7.14.0",
		"jsonwebtoken": "^9.0.2",
		"libphonenumber-js": "^1.12.30",
		"morgan": "~1.9.1",
		"nodemailer": "^7.0.10",
		"pg": "^8.16.3",
		"redis": "^5.10.0",
		"slugify": "^1.6.6",
		"uploadthing": "^7.7.4",
		"zod": "^4.1.12"
	},
	"devDependencies": {
		"@eslint/js": "^9.39.1",
		"@faker-js/faker": "^10.1.0",
		"@types/bcryptjs": "^3.0.0",
		"@types/cookie-parser": "^1.4.10",
		"@types/cors": "^2.8.19",
		"@types/express": "^4.17.25",
		"@types/jsonwebtoken": "^9.0.10",
		"@types/morgan": "^1.9.10",
		"@types/node": "^24.10.1",
		"@types/pg": "^8.15.6",
		"@typescript-eslint/eslint-plugin": "^8.47.0",
		"@typescript-eslint/parser": "^8.47.0",
		"dotenv-cli": "^11.0.0",
		"eslint": "^9.39.1",
		"eslint-config-prettier": "^10.1.8",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"npm-run-all2": "^8.0.4",
		"prettier": "^3.6.2",
		"prisma": "^7.0.0",
		"rimraf": "^6.1.0",
		"ts-node-dev": "^2.0.0",
		"tsconfig-paths": "^4.2.0",
		"tsx": "^4.20.6",
		"typescript": "^5.9.3"
	}
}
