// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model users {
  id            String    @id @default(cuid())
  name          String
  email         String    @unique
  password      String?
  phone         String?
  emailVerified DateTime?
  image         String?
  role          Role
  isActive      Boolean

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  carts              carts?
  wishlists          wishlists?
  addresses          addresses[]
  orders             orders[]
  reviews            product_reviews[]
  productReviewLikes product_review_likes[]

  @@index([email])
}

model addresses {
  id        String  @id @default(cuid())
  userId    String
  name      String
  email     String
  phone     String
  street    String
  city      String
  country   String
  isDefault Boolean

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user   users    @relation(fields: [userId], references: [id], onDelete: Cascade)
  orders orders[]

  @@index([userId])
}

model password_resets {
  id        String   @id @default(cuid())
  email     String
  token     String   @unique
  expiresAt DateTime

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email])
}

model attributes {
  id       String  @id @default(cuid())
  name     String
  slug     String  @unique
  isActive Boolean

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  options options[]

  @@index([slug])
}

model options {
  id          String  @id @default(cuid())
  attributeId String
  name        String
  slug        String  @unique
  isActive    Boolean

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  attribute             attributes               @relation(fields: [attributeId], references: [id])
  productVariantOptions product_variant_option[]

  @@index([slug])
}

model categories {
  id          String  @id @default(cuid())
  name        String
  slug        String  @unique
  description String?
  image       String
  position    Json
  parentId    String?
  isActive    Boolean

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  parent   categories?  @relation("CategoryHierarchy", fields: [parentId], references: [id])
  children categories[] @relation("CategoryHierarchy")
  products products[]

  @@index([slug])
}

model products {
  id          String    @id @default(cuid())
  categoryId  String?
  name        String
  slug        String    @unique
  description String?   @db.Text
  sku         String
  basePrice   Float?
  price       Float?
  stock       Int
  expiresAt   DateTime?
  images      String[]
  isActive    Boolean

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  category      categories?        @relation(fields: [categoryId], references: [id])
  variants      product_variants[]
  reviews       product_reviews[]
  cartItems     cart_items[]
  wishlistItems wishlist_items[]

  @@index([slug])
  @@index([categoryId])
}

model product_variants {
  id        String    @id @default(cuid())
  productId String
  sku       String
  basePrice Float
  price     Float?
  expiresAt DateTime?
  stock     Int
  isActive  Boolean

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  product               products                 @relation(fields: [productId], references: [id], onDelete: Cascade)
  cart_items            cart_items[]
  productVariantOptions product_variant_option[]
  wishlistItems         wishlist_items[]

  @@index([productId])
}

model product_variant_option {
  id        String @id @default(cuid())
  variantId String
  optionId  String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  variant product_variants @relation(fields: [variantId], references: [id], onDelete: Cascade)
  option  options          @relation(fields: [optionId], references: [id], onDelete: Cascade)

  @@unique([variantId, optionId])
  @@index([variantId])
  @@index([optionId])
}

model product_reviews {
  id         String  @id @default(cuid())
  productId  String
  userId     String
  rating     Int
  comment    String? @db.Text
  isApproved Boolean

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  product            products               @relation(fields: [productId], references: [id], onDelete: Cascade)
  user               users                  @relation(fields: [userId], references: [id], onDelete: Cascade)
  productReviewLikes product_review_likes[]

  @@index([productId])
  @@index([userId])
}

model product_review_likes {
  id       String     @id @default(cuid())
  reviewId String
  userId   String
  type     ReviewLike

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  review product_reviews @relation(fields: [reviewId], references: [id], onDelete: Cascade)
  user   users           @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([reviewId])
  @@index([userId])
}

model carts {
  id        String  @id @default(cuid())
  userId    String? @unique
  sessionId String? @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  users users?       @relation(fields: [userId], references: [id])
  items cart_items[]

  @@index([userId])
  @@index([sessionId])
  @@index([userId, sessionId])
}

model cart_items {
  id        String  @id @unique @default(cuid())
  cartId    String
  productId String
  variantId String?
  quantity  Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  cart    carts             @relation(fields: [cartId], references: [id], onDelete: Cascade)
  product products          @relation(fields: [productId], references: [id], onDelete: Cascade)
  variant product_variants? @relation(fields: [variantId], references: [id], onDelete: Cascade)

  @@index([cartId, productId, variantId])
  @@index([cartId])
  @@index([productId])
  @@index([variantId])
}

model wishlists {
  id        String  @id @default(cuid())
  userId    String? @unique
  sessionId String? @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  users users?           @relation(fields: [userId], references: [id])
  items wishlist_items[]

  @@index([userId])
  @@index([sessionId])
  @@index([userId, sessionId])
}

model wishlist_items {
  id         String  @id @default(cuid())
  wishlistId String
  productId  String
  variantId  String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  wishlist wishlists         @relation(fields: [wishlistId], references: [id], onDelete: Cascade)
  product  products          @relation(fields: [productId], references: [id], onDelete: Cascade)
  variant  product_variants? @relation(fields: [variantId], references: [id], onDelete: Cascade)

  @@unique([wishlistId, productId, variantId])
  @@index([wishlistId])
  @@index([productId])
  @@index([variantId])
}

model coupons {
  id         String     @id @default(cuid())
  code       String
  value      Float
  type       CouponType
  usageLimit Int?
  expiresAt  DateTime?
  isActive   Boolean

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  orders orders[]

  @@index([code])
  @@index([expiresAt])
}

model orders {
  id           String      @id @default(cuid())
  userId       String
  addressId    String
  couponId     String?
  orderNumber  String      @unique
  status       OrderStatus
  totalAmount  Float
  shippingCost Float

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user     users         @relation(fields: [userId], references: [id])
  address  addresses     @relation(fields: [addressId], references: [id])
  coupon   coupons?      @relation(fields: [couponId], references: [id])
  items    order_items[]
  payments payments[]

  @@index([userId])
  @@index([orderNumber])
}

model order_items {
  id      String @id @default(cuid())
  orderId String
  data    Json

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  order orders @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@index([orderId])
}

model payments {
  id            String          @id @default(cuid())
  orderId       String
  provider      PaymentProvider
  transactionId String?         @unique
  amount        Float
  status        PaymentStatus
  metadata      Json?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  order orders @relation(fields: [orderId], references: [id])

  @@index([orderId])
  @@index([transactionId])
}

enum Role {
  USER
  ADMIN
  MANAGER
}

enum OrderStatus {
  PENDING
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
  REFUNDED
}

enum PaymentProvider {
  STRIPE
  PAYPAL
  MANUAL
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
}

enum CouponType {
  PERCENTAGE
  FIXED
}

enum ReviewLike {
  LIKE
  DISLIKE
}
